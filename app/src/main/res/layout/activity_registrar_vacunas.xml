<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FDFDFD"
    tools:context=".ui.RegistrarVacunasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Vacunas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mascota:"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <Spinner
            android:id="@+id/spinnerMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNombreVacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la vacuna"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etFechaAplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de aplicaciÃ³n"
            android:focusable="false"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:layout_marginTop="10dp"/>



        <Button
            android:id="@+id/btnGuardarVacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Vacuna"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar Registro"
            android:backgroundTint="#388E3C"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</ScrollView>
